<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="GtkColumnViewDemoWindow" parent="GtkApplicationWindow">
    <property name="title">Gtk4 ColumnView demo</property>
    <property name="default-width">800</property>
    <property name="default-height">600</property>
    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <child>
          <object class="GtkBox">
            <property name="orientation">horizontal</property>
            <style>
              <class name="toolbar"/>
            </style>
            <child>
              <object class="GtkToggleButton" id="button_name">
                <property name="active">True</property>
                <property name="icon-name">format-justify-fill</property>
              </object>
            </child>
            <child>
              <object class="GtkToggleButton" id="button_type">
                <property name="active">True</property>
                <property name="icon-name">format-justify-fill</property>
              </object>
            </child>
            <child>
              <object class="GtkToggleButton" id="button_size">
                <property name="active">True</property>
                <property name="icon-name">format-justify-fill</property>
              </object>
            </child>
            <child>
              <object class="GtkToggleButton" id="button_date">
                <property name="active">True</property>
                <property name="icon-name">format-justify-fill</property>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkNotebook" id="books">
            <property name="visible">True</property>
            <property name="can-focus">True</property>
            <signal name="switch-page" handler="switch_page_handler" />
            <child>
              <object class="GtkScrolledWindow" id="scr">
                <property name="hexpand">TRUE</property>
                <property name="vexpand">TRUE</property>
                <child>
                  <object class="GtkColumnView" id="view_signal">
                    <property name="show-column-separators">TRUE</property>
                    <property name="show-row-separators">TRUE</property>
                    <property name="enable-rubberband">TRUE</property>
                    <property name="reorderable">TRUE</property>
                    <property name="model">
                      <object class="GtkMultiSelection" id="selection">
                        <property name="model">
                          <object class="GtkSortListModel" id="sortlist">
                            <property name="model">
                              <object class="GtkDirectoryList" id="directorylist">
                                <property name="attributes">standard::name,standard::icon,standard::type,standard::size,time::modified</property>
                              </object>
                            </property>
                          </object>
                        </property>
                      </object>
                    </property>
                    <child>
                      <object class="GtkColumnViewColumn" id="signal_name">
                        <property name="title">Name</property>
                        <property name="resizable">1</property>
                        <property name="expand">TRUE</property>
                        <property name="header-menu">header_menu</property>
                        <property name="factory">
                          <object class="GtkSignalListItemFactory">
                            <signal name="setup" handler="signal_name_setup_handler" />
                            <signal name="bind" handler="signal_name_bind_handler" />
                          </object>
                        </property>
                        <property name="sorter">
                          <object class="GtkStringSorter" id="sorter_name">
                            <property name="expression">
                              <closure type="gchararray" function="get_file_name">
                              </closure>
                            </property>
                          </object>
                        </property>
                      </object>
                    </child>  
                    <child>
                      <object class="GtkColumnViewColumn" id="signal_type">
                        <property name="title">Type</property>
                        <property name="resizable">FALSE</property>
                        <property name="expand">TRUE</property>
                        <property name="header-menu">header_menu</property>
                        <property name="factory">
                          <object class="GtkSignalListItemFactory">
                            <signal name="setup" handler="signal_type_setup_handler" />
                            <signal name="bind" handler="signal_type_bind_handler" />
                          </object>
                        </property>
                        <property name="sorter">
                          <object class="GtkNumericSorter" id="sorter_type">
                            <property name="expression">
                              <closure type="gint" function="get_file_type">
                              </closure>
                            </property>
                            <property name="sort-order">GTK_SORT_ASCENDING</property>
                          </object>
                        </property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkColumnViewColumn" id="signal_size">
                        <property name="title">Size</property>
                        <property name="resizable">FALSE</property>
                        <property name="expand">TRUE</property>
                        <property name="header-menu">header_menu</property>
                        <property name="factory">
                          <object class="GtkSignalListItemFactory">
                            <signal name="setup" handler="signal_size_setup_handler" />
                            <signal name="bind" handler="signal_size_bind_handler" />
                          </object>
                        </property>
                        <property name="sorter">
                          <object class="GtkNumericSorter" id="sorter_size">
                            <property name="expression">
                              <closure type="gint64" function="get_file_size">
                              </closure>
                            </property>
                            <property name="sort-order">GTK_SORT_ASCENDING</property>
                          </object>
                        </property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkColumnViewColumn" id="signal_date">
                        <property name="title">Date modified</property>
                        <property name="resizable">FALSE</property>
                        <property name="expand">TRUE</property>
                        <property name="header-menu">header_menu</property>
                        <property name="factory">
                          <object class="GtkSignalListItemFactory">
                            <signal name="setup" handler="signal_date_setup_handler" />
                            <signal name="bind" handler="signal_date_bind_handler" />
                          </object>
                        </property>
                        <property name="sorter">
                          <object class="GtkNumericSorter" id="sorter_datetime_modified">
                            <property name="expression">
                              <closure type="gint64" function="get_file_unixtime_modified">
                              </closure>
                            </property>
                            <property name="sort-order">GTK_SORT_ASCENDING</property>
                          </object>
                        </property>
                      </object>
                    </child>
                    <child>
                        <object class="GtkPopoverMenu" id="rows_popover_menu">
                          <property name="position">bottom</property>
                          <property name="has-arrow">FALSE</property>
                          <property name="menu-model">rows_menu</property>
                        </object>
                    </child>
                    <child>
                        <object class="GtkGestureClick" id="rows_right_clicked">
                          <property name="button">0</property>
                          <signal name="pressed" handler="rows_mouse_click_handler" />
                        </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
            <child type="tab">
              <object class="GtkBox">
                <property name="orientation">horizontal</property>
                <child>
                  <object class="GtkImage">
                    <property name="icon-name">applications-science</property>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel">
                    <property name="visible">True</property>
                    <property name="can-focus">False</property>
                    <property name="label" translatable="yes">Signal</property>
                  </object>
                </child>
                <child>
                  <object class="GtkButton">
                    <property name="icon-name">window-close</property>
                    <signal name="clicked" handler="page_close_clicked_handler" />
                    <style>
                      <class name="flat"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="GtkScrolledWindow" id="scr2">
                <property name="hexpand">TRUE</property>
                <property name="vexpand">TRUE</property>
                <child>
                  <object class="GtkColumnView" id="view_builder">
                    <property name="show-column-separators">TRUE</property>
                    <property name="show-row-separators">TRUE</property>
                    <property name="enable-rubberband">TRUE</property>
                    <property name="reorderable">TRUE</property>
                    <property name="model">
                      <object class="GtkMultiSelection" id="selection2">
                        <property name="model">
                          <object class="GtkSortListModel" id="sortlist2">
                            <property name="model">
                              <object class="GtkDirectoryList" id="directorylist2">
                                <property name="attributes">standard::name,standard::icon,standard::type,standard::size,time::modified</property>
                              </object>
                            </property>
                          </object>
                        </property>
                      </object>
                    </property>
                    <child>
                      <object class="GtkColumnViewColumn" id="builder_name">
                        <property name="title">Name</property>
                        <property name="resizable">1</property>
                        <property name="expand">TRUE</property>
                        <property name="header-menu">header_menu</property>
                        <property name="factory">
                          <object class="GtkBuilderListItemFactory">
                            <property name="resource">/taozuhong/datagrid/column_item_name.ui</property>
                          </object>
                        </property>
                        <property name="sorter">
                          <object class="GtkStringSorter" id="sorter_name2">
                            <property name="expression">
                              <closure type="gchararray" function="get_file_name">
                              </closure>
                            </property>
                          </object>
                        </property>
                      </object>
                    </child>  
                    <child>
                      <object class="GtkColumnViewColumn" id="builder_type">
                        <property name="title">Type</property>
                        <property name="resizable">FALSE</property>
                        <property name="expand">TRUE</property>
                        <property name="header-menu">header_menu</property>
                        <property name="factory">
                          <object class="GtkBuilderListItemFactory">
                            <property name="resource">/taozuhong/datagrid/column_item_type.ui</property>
                          </object>
                        </property>
                        <property name="sorter">
                          <object class="GtkNumericSorter" id="sorter_type2">
                            <property name="expression">
                              <closure type="gint" function="get_file_type">
                              </closure>
                            </property>
                            <property name="sort-order">GTK_SORT_ASCENDING</property>
                          </object>
                        </property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkColumnViewColumn" id="builder_size">
                        <property name="title">Size</property>
                        <property name="resizable">FALSE</property>
                        <property name="expand">TRUE</property>
                        <property name="header-menu">header_menu</property>
                        <property name="factory">
                          <object class="GtkBuilderListItemFactory">
                            <property name="resource">/taozuhong/datagrid/column_item_size.ui</property>
                          </object>
                        </property>
                        <property name="sorter">
                          <object class="GtkNumericSorter" id="sorter_size2">
                            <property name="expression">
                              <closure type="gint64" function="get_file_size">
                              </closure>
                            </property>
                            <property name="sort-order">GTK_SORT_ASCENDING</property>
                          </object>
                        </property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkColumnViewColumn" id="builder_date">
                        <property name="title">Date modified</property>
                        <property name="resizable">FALSE</property>
                        <property name="expand">TRUE</property>
                        <property name="header-menu">header_menu</property>
                        <property name="factory">
                          <object class="GtkBuilderListItemFactory">
                            <property name="resource">/taozuhong/datagrid/column_item_date.ui</property>
                          </object>
                        </property>
                        <property name="sorter">
                          <object class="GtkNumericSorter" id="sorter_datetime_modified2">
                            <property name="expression">
                              <closure type="gint64" function="get_file_unixtime_modified">
                              </closure>
                            </property>
                            <property name="sort-order">GTK_SORT_ASCENDING</property>
                          </object>
                        </property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkColumnViewColumn" id="builder_prop">
                        <property name="title">Property</property>
                        <property name="resizable">FALSE</property>
                        <property name="expand">TRUE</property>
                        <property name="header-menu">header_menu</property>
                        <property name="factory">
                          <object class="GtkBuilderListItemFactory">
                            <property name="resource">/taozuhong/datagrid/column_item_property.ui</property>
                          </object>
                        </property>
                        <property name="sorter">
                          <object class="GtkNumericSorter" id="sorter_css">
                            <property name="expression">
                              <constant type='gint64'>100</constant>
                            </property>
                            <property name="sort-order">GTK_SORT_ASCENDING</property>
                          </object>
                        </property>
                      </object>
                    </child>
                    <child>
                        <object class="GtkPopoverMenu" id="rows_popover_menu2">
                          <property name="position">bottom</property>
                          <property name="has-arrow">FALSE</property>
                          <property name="menu-model">rows_menu</property>
                        </object>
                    </child>
                    <child>
                        <object class="GtkGestureClick" id="rows_right_clicked2">
                          <property name="button">0</property>
                          <signal name="pressed" handler="rows_mouse_click_handler" />
                        </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
            <child type="tab">
              <object class="GtkBox">
                <property name="orientation">horizontal</property>
                <child>
                  <object class="GtkImage">
                    <property name="icon-name">applications-utilities</property>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel">
                    <property name="visible">True</property>
                    <property name="can-focus">False</property>
                    <property name="label" translatable="yes">Builder</property>
                  </object>
                </child>
                <child>
                  <object class="GtkButton">
                    <property name="icon-name">window-close</property>
                    <signal name="clicked" handler="page_close_clicked_handler" />
                    <style>
                      <class name="flat"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
  <menu id="header_menu">
    <section>
      <item>
        <attribute name="label" translatable="yes">Name</attribute>
        <attribute name="action">columnview.show-name</attribute>
        <attribute name="icon">starred</attribute>
        <attribute name="accel">&lt;Control&gt;1</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">Type</attribute>
        <attribute name="action">columnview.show-type</attribute>
        <attribute name="icon">starred</attribute>
        <attribute name="accel">&lt;Control&gt;2</attribute>
      </item>      
      <item>
        <attribute name="label" translatable="yes">Size</attribute>
        <attribute name="action">columnview.show-size</attribute>
        <attribute name="icon">starred</attribute>
        <attribute name="accel">&lt;Control&gt;3</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">Date</attribute>
        <attribute name="action">columnview.show-date</attribute>
        <attribute name="icon">starred</attribute>
        <attribute name="accel">&lt;Control&gt;4</attribute>
      </item>
    </section>
  </menu>
  <menu id="rows_menu">
    <section>
      <item>
        <attribute name="label" translatable="yes">Select All</attribute>
        <attribute name="action">columnview.select-all</attribute>
        <attribute name="icon">view-fullscreen</attribute>
        <attribute name="accel">&lt;Control&gt;A</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">Select None</attribute>
        <attribute name="action">columnview.select-none</attribute>
        <attribute name="icon">zoom-fit-best</attribute>
        <attribute name="accel">&lt;Control&gt;&lt;Shift&gt;A</attribute>
      </item>
    </section>
    <section>
      <submenu>
        <attribute name="label" translatable="yes">Columns</attribute>
        <section>
          <item>
            <attribute name="label" translatable="yes">Name</attribute>
            <attribute name="action">columnview.show-name</attribute>
            <attribute name="icon">starred</attribute>
            <attribute name="accel">&lt;Control&gt;1</attribute>
          </item>
          <item>
            <attribute name="label" translatable="yes">Type</attribute>
            <attribute name="action">columnview.show-type</attribute>
            <attribute name="icon">starred</attribute>
            <attribute name="accel">&lt;Control&gt;2</attribute>
          </item>      
          <item>
            <attribute name="label" translatable="yes">Size</attribute>
            <attribute name="action">columnview.show-size</attribute>
            <attribute name="icon">starred</attribute>
            <attribute name="accel">&lt;Control&gt;3</attribute>
          </item>
          <item>
            <attribute name="label" translatable="yes">Date</attribute>
            <attribute name="action">columnview.show-date</attribute>
            <attribute name="icon">starred</attribute>
            <attribute name="accel">&lt;Control&gt;4</attribute>
          </item>
        </section>
      </submenu>
      <submenu>
        <attribute name="label" translatable="yes">Style</attribute>
        <section>
          <item>
            <attribute name="label" translatable="yes">Data table</attribute>
            <attribute name="action">columnview.show-table</attribute>
            <attribute name="accel">&lt;Control&gt;&lt;Alt&gt;T</attribute>
          </item>
          <item>
            <attribute name="label" translatable="yes">Rich list</attribute>
            <attribute name="action">columnview.show-list</attribute>
            <attribute name="accel">&lt;Control&gt;&lt;Alt&gt;L</attribute>
          </item>
          <item>
            <attribute name="label" translatable="yes">Sidebar</attribute>
            <attribute name="action">columnview.show-sidebar</attribute>
            <attribute name="accel">&lt;Control&gt;&lt;Alt&gt;S</attribute>
          </item>           
        </section>
      </submenu>
    </section>
  </menu>
</interface>